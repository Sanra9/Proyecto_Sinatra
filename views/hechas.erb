<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading"><h1>Lista de tareas realizadas</h1></div>
        <div class="panel-body"><h4><em><span class="label label-success"> Esta es la lista de tareas realizadas, ¡Buen trabajo!</span></em></h4><br>
        <div class="panel-body">
        <% @tareas.each do |t| %>
        <%if t["done"]==true %>
        <ul class="list-group">
          <li class="list-group-item">
            <h4 class="list-group-item-heading"><%= t["title"] %></h4>
            <div class="text-right">
              <form class="" action="/destroy" method="post">
              <div class="checkbox">
                <label><input type="checkbox" name="id" value="<%=t["id"]%>"></label>
                <button type="submit" class="btn btn-danger">¡Borrar!</button>
              </div>

            </form>
            </div>
          </li>
        </ul>
        <%end %>
        <%end  %>
        </div>
      </div>
    </div>
  </div>
</div>
